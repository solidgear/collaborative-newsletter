{
    "extends" : "eslint:recommended",
    "root": true,
    "rules": {
        "array-bracket-spacing": 2,
        "brace-style": 2,
        "camelcase": 2,
        "comma-style": 2,
        "comma-spacing": 2,
        "curly": 2,
        "dot-location": ["error", "property"],
        "dot-notation": 2,
        "eqeqeq": 2,
        "keyword-spacing": 2,
        "no-else-return": 2,
        "no-eq-null": 2,
        "no-eval": 2,
        "no-floating-decimal": 2,
        "no-implicit-globals": 2,
        "no-implied-eval": 2,
        "no-invalid-this": 2,
        "no-loop-func": 2,
        "no-multi-spaces": 2,
        "no-multi-str": 2,
        "no-native-reassign": 2,
        "no-use-before-define": ["error", { "functions": false, "classes": true }],
        "no-unused-vars": ["error", { "args": "none" }],
        "semi": 2,
        "space-before-blocks": 2,
        "space-infix-ops": 2,
        "space-unary-ops": 2,
        "no-debugger": 0
    },
    "env": {
        "node": true,
        "mocha": true
    },
    "globals": {
        "Promise": false
    }
}